<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#002B0A">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:padding="8dp"
        android:backgroundTint="#FFFFFF"
        android:background="@drawable/baseline_close_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/back_button"
        app:layout_constraintBottom_toTopOf="@+id/submit_button">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_title"
                android:text="Let's start by claiming your first store!"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <!-- Restaurant Name Input -->
            <EditText
                android:id="@+id/restaurant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name of Restaurant"
                android:backgroundTint="#008F00"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:layout_marginTop="16dp"
                android:padding="12dp"/>

            <!-- Opening Hours Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <EditText
                    android:id="@+id/open_hour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="00:00"
                    android:inputType="time"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:backgroundTint="#008F00"
                    android:padding="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginHorizontal="8dp"/>

                <EditText
                    android:id="@+id/close_hour"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="00:00"
                    android:inputType="time"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:backgroundTint="#008F00"
                    android:padding="12dp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/restaurant_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Postal Code of Restaurant"
                android:backgroundTint="#008F00"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:layout_marginTop="16dp"
                android:padding="12dp"/>

            <EditText
                android:id="@+id/restaurant_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone number of Restaurant"
                android:backgroundTint="#008F00"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:layout_marginTop="16dp"
                android:padding="12dp"/>

            <EditText
                android:id="@+id/restaurant_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail of Restaurant (If applicable)"
                android:backgroundTint="#008F00"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:layout_marginTop="16dp"
                android:padding="12dp"/>

            <EditText
                android:id="@+id/restaurant_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Website of Restaurant (If applicable)"
                android:backgroundTint="#008F00"
                android:inputType="text"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:layout_marginTop="16dp"
                android:padding="12dp"/>

            <EditText
                android:id="@+id/restaurant_description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Description of Restaurant"
                android:backgroundTint="#008F00"
                android:inputType="textMultiLine"
                android:textAlignment="textStart"
                android:gravity="start"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:layout_marginTop="16dp"
                android:padding="12dp"/>

            <!-- Proof of Business Registration -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please submit a URL to an image of your proof of business registration"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="16dp" />

            <!-- File Upload Button -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/upload_image"
                    android:layout_width="256dp"
                    android:layout_height="256dp" />

                <Button
                    android:id="@+id/browse_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:backgroundTint="#008F00"
                    android:text="Input URL"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#00A000"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
