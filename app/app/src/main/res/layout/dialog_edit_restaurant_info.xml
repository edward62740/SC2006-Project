<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#042D14">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_save_changes"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/button_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:padding="8dp"
                android:background="@drawable/baseline_arrow_back_24"
                android:backgroundTint="#FFFFFF"/>

            <ImageView
                android:id="@+id/image_restaurant"
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:layout_margin="16dp"
                android:contentDescription="Restaurant Image"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"/>

            <EditText
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Restaurant Name"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="Operating Hours"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/text_open_hour"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:background="#042511"
                    android:text="--:--"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp" />

                <!-- Text Between Opening and Closing Times -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:text=" to "
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:layout_marginTop="8dp"/>

                <!-- Closing Time Picker -->
                <EditText
                    android:id="@+id/text_close_hour"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="#042511"
                    android:text="--:--"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"/>

            </LinearLayout>

                <EditText
                    android:id="@+id/text_description"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:gravity="start"
                    android:layout_marginTop="8dp"
                    android:text="Restaurant Description"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:padding="16dp"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_save_changes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#00C853"
        android:text="Submit Request"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
