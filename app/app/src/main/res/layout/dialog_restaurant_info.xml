<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#001f0e"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Dialog Title -->
<TextView
android:id="@+id/dialog_title"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:paddingBottom="8dp"
android:textSize="20sp"
android:textStyle="bold"
android:textColor="#AEEEEE"
    android:text="Dialog Title" />


<WebView
android:id="@+id/map_webview"
android:layout_width="match_parent"
android:layout_height="250dp"
android:layout_marginTop="12dp"
    android:elevation="4dp" />


<TextView
android:id="@+id/dialog_address"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="16sp"
android:layout_marginTop="16dp"
android:textColor="#FFFFFF"
    android:text="Address: 123 Main St, City" />

<TextView
android:id="@+id/dialog_phone"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="16sp"
android:textColor="#FFFFFF"
android:text="Phone: (123) 456-7890" />


<TextView
android:id="@+id/dialog_description"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="16sp"
android:layout_marginTop="8dp"
android:textColor="#AEEEEE"
    android:text="Description of the restaurant or details." />

    <!-- RecyclerView for Restaurant Menu -->
<androidx.recyclerview.widget.RecyclerView
android:id="@+id/restaurant_menu"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="16dp"
android:background="#001a0a"
    android:elevation="2dp" />

<Button
android:id="@+id/dialog_ok_button"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_gravity="end"
android:layout_marginTop="16dp"
android:padding="12dp"
android:text="OK"
android:textColor="#001f0e"
    android:backgroundTint="#AEEEEE"
    android:elevation="4dp" />
    </LinearLayout>
