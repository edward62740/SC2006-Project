<!-- res/layout/item_restaurant_request.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#001f0e"
    android:padding="16dp">

    <TextView
        android:id="@+id/textRestaurantId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant ID"
        android:textColor="#AEEEEE"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textVendorId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendor ID"
        android:textColor="#AEEEEE"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reason"
        android:textColor="#AEEEEE"
        android:textSize="16sp" />
</LinearLayout>
