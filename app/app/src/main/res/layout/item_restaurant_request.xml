<!-- res/layout/item_restaurant_request.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_request_menu_item"
    android:padding="20dp">

    <TextView
        android:id="@+id/textRestaurantId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant ID"
        android:textColor="@color/pastel_green"
        android:fontFamily="@font/sf"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textVendorId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vendor ID"
        android:textColor="@color/pastel_green"
        android:fontFamily="@font/sf"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:visibility="gone"
        android:textColor="@color/pastel_green"
        android:fontFamily="@font/sf"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reason"
        android:justificationMode="inter_word"
        android:textColor="@color/pastel_green"
        android:fontFamily="@font/sf"
        android:textSize="16sp" />
</LinearLayout>
