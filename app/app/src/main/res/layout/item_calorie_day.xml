<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:background="#3B3B3B"
    android:orientation="horizontal"
    android:padding="0dp"> <!-- Spacing between items -->


    <View
        android:id="@+id/timeline_dot"
        android:layout_width="10dp"
        android:layout_height="10dp"

        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp" />
    <View
        android:layout_width="4dp"
        android:layout_marginStart="8dp"
        android:layout_height="match_parent"
        android:background="#AEEEEE" /> <!-- Timeline color -->



    <!-- Date Section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp"
        android:paddingStart="8dp">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#AEEEEE"
            android:textSize="18sp"
            android:textStyle="bold" /> <!-- Light cyan text color -->

        <!-- Sublist of Calorie Entries -->
        <LinearLayout
            android:id="@+id/calorie_entries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="4dp" />
    </LinearLayout>
</LinearLayout>
